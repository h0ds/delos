# Server Configuration
PORT=3333
NODE_ENV=development

# Mock Data Mode - Use generated sample data instead of real APIs
# Set to "true" to use mock/demo data, "false" for real API data
USE_MOCK_DATA=false

# ==================================================
# SIGNAL AGGREGATION SOURCES
# ==================================================

# NewsAPI - Premium news aggregation (REQUIRES KEY)
# Get key: https://newsapi.org
# Free tier: 100 requests/day
# Production: Consider paid tier for reliability
NEWS_API_KEY=your_newsapi_key_here
ENABLE_NEWSAPI=true

# Google News - No key required (public RSS)
# Set to false to disable this source
ENABLE_GOOGLE_NEWS=true

# Reddit - No key required (public API)
# Set to false to disable this source
ENABLE_REDDIT=true

# ==================================================
# AI INTELLIGENCE ANALYSIS (Optional)
# ==================================================

# AI API Provider - Supports: openai | anthropic | deepseek
# If not set, heuristic analysis is used (no AI)
AI_API_PROVIDER=openai

# AI API Key - Required if AI_API_PROVIDER is set
# OpenAI: sk-xxx... (https://platform.openai.com/api-keys)
# Anthropic: sk-ant-xxx... (https://console.anthropic.com/api)
# DeepSeek: your-key... (https://platform.deepseek.com)
AI_API_KEY=your_api_key_here

# ==================================================
# PREDICTION MARKETS (Optional)
# ==================================================

# Polymarket API - Real prediction market data
# Get key: https://api.polymarket.com
# Optional but recommended for signal enrichment
POLYMARKET_API_KEY=your_polymarket_api_key_here

# ==================================================
# CORS & NETWORKING
# ==================================================

# CORS Origin - Frontend URL
# Development: http://localhost:5173
# Production: https://yourdomain.com
CORS_ORIGIN=http://localhost:5173
